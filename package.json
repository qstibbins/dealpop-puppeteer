{
  "name": "deal-pop-scraper",
  "version": "1.0.0",
  "description": "DealPop Web Scraping Service",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "preinstall": "echo '=== PRE-INSTALL DEBUG ===' && echo 'Node version:' && node --version && echo 'NPM version:' && npm --version && echo 'Working directory:' && pwd && echo 'Environment:' && env | grep -E '(NODE|NPM|PATH)' && echo '=== END PRE-INSTALL ==='",
    "postinstall": "echo '=== POST-INSTALL DEBUG ===' && echo 'Checking Puppeteer:' && npm list puppeteer || echo 'Puppeteer check failed' && echo 'Node modules size:' && du -sh node_modules && echo '=== END POST-INSTALL ==='",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "scraper:test": "node price-scraper/test.js",
    "scraper:single": "node price-scraper/scraper.js",
    "scraper:cron": "node cron/scrapePrices.js",
    "jobs:schedule": "node jobs/scheduler.js",
    "jobs:worker": "node jobs/worker.js",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "node-cron": "^3.0.2",
    "pg": "^8.11.0",
    "playwright": "^1.40.0"
  },
  "optionalDependencies": {
    "bullmq": "^3.12.0",
    "ioredis": "^5.3.2",
    "redis": "^4.6.5",
    "twilio": "^4.19.0"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "puppeteer": {
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-accelerated-2d-canvas",
      "--no-first-run",
      "--no-zygote",
      "--single-process",
      "--disable-gpu"
    ]
  }
}
