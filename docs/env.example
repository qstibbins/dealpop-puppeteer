# DealPop Price Checker Service - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection settings
# These should match your database configuration

# Database host (RDS endpoint for production, localhost for development)
DB_HOST=localhost

# Database port (usually 5432 for PostgreSQL)
DB_PORT=5432

# Database name
DB_NAME=dealpop

# Database username
DB_USER=your_username

# Database password
DB_PASSWORD=your_password

# Enable SSL for database connections
# Set to 'true' for production, 'false' for local development
DB_SSL=false

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# SendGrid configuration for email notifications

# SendGrid API key (get from SendGrid dashboard)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# From email address for notifications
# Must be verified in SendGrid
SENDGRID_FROM_EMAIL=noreply@dealpop.com

# =============================================================================
# SMS NOTIFICATIONS (OPTIONAL)
# =============================================================================
# Twilio configuration for SMS notifications
# Leave empty if you don't want SMS notifications

# Twilio Account SID
TWILIO_ACCOUNT_SID=your_twilio_account_sid

# Twilio Auth Token
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Twilio phone number (must be purchased from Twilio)
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
# Set to 'production' for production, 'development' for local development
NODE_ENV=development

# Port for the application to run on
# App Runner will override this with PORT environment variable
PORT=3000

# Log level for application logging
# Options: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# AWS CONFIGURATION (FOR DEPLOYMENT)
# =============================================================================
# AWS region (for App Runner deployment)
AWS_REGION=us-east-1

# AWS App Runner service name
APP_RUNNER_SERVICE_NAME=dealpop-price-checker

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode for development
# Set to 'true' to enable detailed logging
DEBUG=false

# Test mode - prevents actual notifications from being sent
# Set to 'true' for testing
TEST_MODE=false

# Test email address for development notifications
TEST_EMAIL=test@example.com

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Maximum number of products to process per run
# Reduce this if you're hitting memory or timeout limits
MAX_PRODUCTS_PER_RUN=50

# Delay between product scraping (in milliseconds)
# Increase this to be more respectful to target websites
SCRAPING_DELAY=2000

# Browser timeout (in milliseconds)
BROWSER_TIMEOUT=15000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Internal API key for service-to-service communication
# Generate a secure random string for production
INTERNAL_API_KEY=your_internal_api_key_here

# CORS origins (comma-separated list)
# Add your frontend and extension domains
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# CloudWatch log group name
CLOUDWATCH_LOG_GROUP=/aws/apprunner/dealpop-price-checker

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# EXAMPLE VALUES FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# Development Environment Example:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=dealpop_dev
# DB_USER=postgres
# DB_PASSWORD=password
# DB_SSL=false
# NODE_ENV=development
# TEST_MODE=true

# Production Environment Example:
# DB_HOST=dealpop-db.cluster-xyz.us-east-1.rds.amazonaws.com
# DB_PORT=5432
# DB_NAME=dealpop
# DB_USER=dealpop_user
# DB_PASSWORD=secure_password_123
# DB_SSL=true
# NODE_ENV=production
# TEST_MODE=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords for production
# 3. Rotate API keys regularly
# 4. Use AWS Secrets Manager for production secrets
# 5. Test all configuration in a staging environment first
# 6. Monitor logs for any configuration-related errors
